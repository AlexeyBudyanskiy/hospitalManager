@model HospitalManager.WEB.ViewModels.ExampleViewModel

@{
    ViewBag.Title = "Create";
}

<h2 class="grey-text center">Edit example</h2>

<div class="row">
    <div class="col s12 m8 l6 push-m2 push-l3">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "red-text center" })
            @Html.HiddenFor(model => model.Id)
            <div class="card white darken-3">
                <div class="card-content">
                    @Html.LabelFor(model => model.Name, new { @for = "example-name" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "validate", id = "example-name", maxlength = "50", minlength = "3", pattern = "^\\S.*$", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text" })

                    @Html.LabelFor(model => model.Description, new { @for = "example-description" })
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "validate", id = "example-description", maxlength = "1000", minlength = "3" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "red-text" })

                    <div class="center">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

